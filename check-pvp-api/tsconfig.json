{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
          "check-pvp-common/*": ["../../check-pvp-common/*"],
          "config/*": ["./config/*"],
          "controllers/*": ["./controllers/*"],
          "models/*": ["./models/*"],
          "routes/*": ["./routes/*"],
          "services/*": ["./services/*"],
          "util/*": ["./util/*"]
      },
      "resolveJsonModule": true
  },
  "include": [
      "src/**/*"
  ]
}